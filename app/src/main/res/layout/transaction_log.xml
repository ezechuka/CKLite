<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginRight="8dp"
    android:layout_marginBottom="4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    app:contentPadding="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/purchase_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/product_sans_regular"
            android:text="TextView"
            android:textColor="@android:color/black" />

        <TextView
            android:id="@+id/purchase_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="10dp"
            android:fontFamily="@font/montserrat"
            android:textColor="@android:color/black"
            android:textStyle="italic" />

        <TextView
            android:id="@+id/purchase_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/purchase_date"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/product_sans_regular"
            android:text="TextView"
            android:textColor="@android:color/black"
            android:textStyle="bold" />

        <com.joooonho.SelectableRoundedImageView
            android:id="@+id/network_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@id/purchase_info"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="15dp"
            app:sriv_border_color="@color/colorAccent"
            app:sriv_border_width="1dp"
            app:sriv_left_bottom_corner_radius="3dp"
            app:sriv_left_top_corner_radius="3dp"
            app:sriv_right_bottom_corner_radius="3dp"
            app:sriv_right_top_corner_radius="3dp" />

    </RelativeLayout>

</android.support.v7.widget.CardView>